<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    android:fitsSystemWindows="false"
    android:padding="20dp">

                <ImageView
                    android:id="@+id/Firstimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:srcCompat="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/Secondimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintStart_toEndOf="@+id/Secondimage"
                    app:srcCompat="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/Thirdimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginTop="180dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintBottom_toTopOf="@+id/Secondimage"
                    app:srcCompat="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/Fourthimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintStart_toEndOf="@+id/Thirdimage"
                    app:layout_constraintTop_toBottomOf="@+id/Secondimage"
                    app:srcCompat="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/fifthimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginTop="340dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintBottom_toTopOf="@+id/Secondimage"
                    app:srcCompat="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/sixthimage"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="340dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.448"
                    app:layout_constraintStart_toEndOf="@+id/Thirdimage"
                    app:layout_constraintTop_toBottomOf="@+id/Secondimage"
                    app:srcCompat="@color/md_grey_400" />


</android.support.design.widget.CoordinatorLayout>
